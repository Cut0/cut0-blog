---
import { getArticleList, getTagList } from "@cut0-blog/api-client";
import { createArticleFilter } from "../../features/articles/utils";
import Header from "../../components/common/Header.astro";
import HomeLayout from "../../layouts/HomeLayout.astro";
import HomeTemplate from "../../templates/HomeTemplate.astro";

const [articleList] = await Promise.all([
  getArticleList.handler({
    filters: createArticleFilter({ category: "pick-up" }),
  }),
]);
---

<HomeLayout>
  <Header />
  <HomeTemplate articleList={articleList} category="pick-up" />
</HomeLayout>
